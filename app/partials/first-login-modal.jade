.modal-body.flex
  .flex-column.flex-between.rocket-text.flex-1
    h3.mtn.h2.em-300.center-align(translate="FIRST_LOGIN_TITLE")
    p.center-align.mtm.width-100.h4.em-300(translate="FIRST_LOGIN_TEXT")
    button.button-success.button-lg.mtl(ng-click="ok()", translate="FIRST_LOGIN_ACTION")
  img.rocket-gif(src="img/rocket.gif")
  img(ng-hide="rocket.finished").rocket-gif(src="img/rocket.gif")
  img(ng-show="rocket.finished").rocket-last-state(src="img/rocket-last-state.png")
  img(ng-class="{'active': rocket.launching}").blocket-rocket(src="img/white-rocket.svg")
